	<entry name="Suburb" value="Suburb"/>
	<entry name="SuburbDescription" value="This area of low-rise homes is ideal for our blue-collar population to retire to after a hard day in the factories and mines."/>
	<entry name="SuburbProperties" value="<icon texture='GUI/Bullet'/>Construction"/>
	<entry name="SuburbStats" value="<icon texture='Resources/Habitat'/> +2  <icon texture='Resources/Credits'/> -2"/>
	<entry name="Tropical" value="Tropical"/>
	<entry name="TropicalDescription" value="The distinguishing features of tropical zones are a warm, humid climate, lush vegetation, and soil that's rather poor in nutrients."/>
	<entry name="TropicalProperties" value="<icon texture='GUI/Bullet'/>Terrain"/>
	<entry name="TropicalStats" value="<icon texture='Resources/Food'/> 2  <icon texture='Resources/Minerals'/> 0"/>
	<entry name="Tundra" value="Tundra"/>
	<entry name="TundraDescription" value="The tundra is cold and barren, its vegetation mainly composed of shrubs, mosses and lichens. Agriculture is hampered by the low temperatures and permanently frozen subsoil, even in the short growing seasons."/>
	<entry name="TundraProperties" value="<icon texture='GUI/Bullet'/>Terrain"/>
	<entry name="TundraStats" value="<icon texture='Resources/Food'/> 1  <icon texture='Resources/Minerals'/> 0"/>
